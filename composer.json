{
  "name": "copy2cloud/server",
  "description": "copy2cloud-server is a universal clipboard service.",
  "keywords": [
    "clipboard",
    "redis"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Adem Ali Durmus",
      "email": "ademali@durmus.me"
    }
  ],
  "autoload": {
    "psr-4": {
      "Copy2Cloud\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Copy2Cloud\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "respect/validation": "^2.2",
    "ramsey/uuid": "^4.2",
    "slim/slim": "^4.11",
    "slim/psr7": "^1.6",
    "slim/http": "^1.3",
    "monolog/monolog": "^2.3",
    "predis/predis": "^1.1",
    "defuse/php-encryption": "^2.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
